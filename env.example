# SecuRizz Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=true

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DATABASE_URL=sqlite:///./securizz.db

# =============================================================================
# IPFS CONFIGURATION (Pinata)
# =============================================================================
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================
SOLANA_CLUSTER=https://api.devnet.solana.com
SOLANA_PROGRAM_ID=ReplaceWithDeployedProgramId
SOLANA_WALLET_PATH=~/.config/solana/id.json

# =============================================================================
# SWITCHBOARD ORACLE CONFIGURATION
# =============================================================================
SWITCHBOARD_QUEUE=devnet-default
SWITCHBOARD_ORACLE_KEY=your_oracle_key_here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_SOLANA_CLUSTER=devnet
NEXT_PUBLIC_PROGRAM_ID=ReplaceWithDeployedProgramId

# =============================================================================
# ML ENGINE CONFIGURATION
# =============================================================================
ML_MODEL_PATH=./ml-engine/models
ML_MAX_LENGTH=512
ML_BATCH_SIZE=8

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
